@model IEnumerable<VoteDataAccess.Vote>

@{
    ViewBag.Title = "Manage Candidates";
}

<h2>Manage Candidates</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CandidateId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CandidateName)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CandidateId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CandidateName)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VoteId }) |
            @Html.ActionLink("Details", "Details", new { id=item.VoteId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VoteId })
        </td>
    </tr>
}

</table>
